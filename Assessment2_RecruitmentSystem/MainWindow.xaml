<Window x:Class="Assessment2_RecruitmentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessment2_RecruitmentSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920" Background="DarkBlue">
    <TabControl>
        <TabItem Header="Contractors" Foreground="Black">
            <Grid Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="16"/>
                </Grid.RowDefinitions>
                <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1,0,0,0" Margin="5,0,0,0" Grid.RowSpan="12">
                    <TextBlock Grid.Row="0" Grid.Column="5" Padding="1" Grid.RowSpan="11"/>
                </Border>
                <ListBox x:Name="ListBoxContractors" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="7" Grid.RowSpan="4" FontSize="12"/>
                <Label Content="Available Contractors" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" FontSize="24" HorizontalAlignment="Center"/>
                <Label Content="Contractor Management" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" FontSize="24" HorizontalAlignment="Center"/>
                <Button x:Name="ButtonLoadAvailableContractors" Content="Load/Refresh" Grid.Column="1" Grid.Row="11" Margin="0,5,0,5" Click="LoadAvailableContractors_Click"/>
                <Button x:Name="ButtonAddContractor" Content="Add" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="60" Margin="0,5,0,5" Background="LightGreen" BorderBrush="DarkGreen" Click="AddContractor_Click"/>
                <Button x:Name="ButtonRemoveContractor" Content="Remove" Grid.Column="2" Grid.Row="11" HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Width="75" Margin="0,5,0,5" Background="IndianRed" Foreground="White" BorderBrush="DarkRed" Click="RemoveContractor_Click"/>
                <TextBox x:Name="TextBoxFirstName" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TextBoxLastName" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <DatePicker x:Name="DatePickerStartDate" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="1" Height="30" VerticalAlignment="Center"  VerticalContentAlignment="Center"/>
                <TextBox x:Name="TextBoxWage" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="1"  Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Content="First Name:" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="Last Name:" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="Start Date:" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="Hourly Wage:" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right" Height="30" VerticalAlignment="Center" Width="80"/>
                <ListBox x:Name="ListBoxUnassignedJobs" Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="7" Grid.RowSpan="4" FontSize="12"/>
                <Label Content="Unassigned Jobs" Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="3" FontSize="24" HorizontalAlignment="Center"/>
                <Button x:Name="ButtonLoadUnassignedJob" Content="Load/Refresh" Click="LoadUnassignedJobs_Click" Grid.Column="5" Grid.ColumnSpan="1" Grid.Row="11" Margin="0,5,0,5"/>
                <Label Content="Job Managment" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3" FontSize="24" HorizontalAlignment="Center"/>
                <Button x:Name="ButtonAddJob" Content="Add" Click="AddJob_Click" Grid.Column="7" Grid.Row="4" HorizontalAlignment="Center" Height="25" VerticalAlignment="Center" Width="60" Margin="0,5,0,5" Background="LightGreen" BorderBrush="DarkGreen"/>
                <Button x:Name="ButtonRemoveJob" Content="Remove" Click="RemoveJob_Click" Grid.Column="6" Grid.Row="11" HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Width="75" Margin="0,5,0,5" Background="IndianRed" Foreground="White" BorderBrush="DarkRed"/>
                <TextBox x:Name="TextBoxTitle" Grid.Column="6" Grid.Row="2" Grid.ColumnSpan="1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <DatePicker x:Name="DatePickerJobDate" Grid.Column="6" Grid.Row="3" Grid.ColumnSpan="1" Height="30" VerticalAlignment="Center"  VerticalContentAlignment="Center"/>
                <TextBox x:Name="TextBoxCost" Grid.Column="6" Grid.Row="4" Grid.ColumnSpan="1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Center"  VerticalContentAlignment="Center"/>
                <Label Content="Job Title:" Grid.Column="5" Grid.Row="2" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="Job Date:" Grid.Column="5" Grid.Row="3" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="Cost:" Grid.Column="5" Grid.Row="4" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Button x:Name="ButtonAssignJob" Content="Assign Job" Click="AssignJob_Click" Grid.Column="6" Grid.Row="11" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="5,5,5,5" Background="Blue" BorderBrush="DarkBlue" Foreground="White"/>
            </Grid>
        </TabItem>
        <TabItem Header="Active Jobs" Foreground="Black">
            <Grid Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="16"/>
                </Grid.RowDefinitions>
                <Label Content="Active Jobs" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" FontSize="24" HorizontalAlignment="Center"/>
                <ListBox x:Name="ListBoxActiveJobs" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="2" Grid.RowSpan="6" FontSize="14"/>
                <Button x:Name="ButtonLoadAssignedJobs" Content="Load/Refresh" Grid.Column="1" Grid.Row="8" FontSize="15" Margin="0,5,0,5" Click="LoadAssignedJobs_Click"/>
                <Button x:Name="ButtonCompleteJob" Content="Complete Job" Click="CompleteJob_Click" Grid.Column="4" Grid.Row="8" FontSize="15" Margin="5,5,0,5" Background="LightGreen" BorderBrush="DarkGreen"/>
            </Grid>
        </TabItem>
        <TabItem Header="Reporting">
                        <Grid Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="16"/>
                </Grid.RowDefinitions>
                <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1,0,0,0" Margin="5" Grid.RowSpan="12">
                    <TextBlock Grid.Row="0" Grid.Column="4" Padding="10" Grid.RowSpan="11"/>
                </Border>
                <Label Content="Filters" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" FontSize="24" HorizontalAlignment="Center"/>
                <Label Content="Jobs Report" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3" FontSize="24" HorizontalAlignment="Center"/>
                <ListBox x:Name="ListBoxJobsReport" Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="8" FontSize="12"/>
                <Button x:Name="ButtonLoadJobsReport" Content="Load/Refresh" Grid.Column="5" Grid.Row="10" FontSize="15" Margin="0,5,0,5" Click="LoadJobsReport_Click"/>
                <Button x:Name="ButtonSearchJobsReport" Content="Search" Click="LoadJobsReport_Click" Grid.Column="2" Grid.Row="6" Width="75" HorizontalAlignment="left" FontSize="15" Margin="0,5,0,5" Background="LightGreen" BorderBrush="DarkGreen"/>
                <Button x:Name="ButtonClearJobsReport" Content="Clear" Click="ClearJobsReport_Click" Grid.Column="2" Grid.Row="6" Width="75" HorizontalAlignment="Right" FontSize="15" Margin="0,5,0,5" Background="IndianRed" Foreground="White" BorderBrush="DarkRed"/>
                <Label Content="Min Cost:" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="Max Cost:" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="Start Date:" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right"  Height="30" VerticalAlignment="Center" Width="80"/>
                <Label Content="End Date:" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right" Height="30" VerticalAlignment="Center" Width="80"/>
                <TextBox x:Name="TextBoxMinCost" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TextBoxMaxCost" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <DatePicker x:Name="DatePickerDateStart" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="1" Height="30" VerticalAlignment="Center"  VerticalContentAlignment="Center"/>
                <DatePicker x:Name="DatePickerDateEnd" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="1" Height="30" VerticalAlignment="Center"  VerticalContentAlignment="Center"/>
            </Grid>
        </TabItem>

    </TabControl>
</Window>
